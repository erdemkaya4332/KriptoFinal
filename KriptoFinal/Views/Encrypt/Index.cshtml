@{
    ViewData["Title"] = "RSA Şifrele";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>RSA Şifrele</title>
    <style>
        /* Stil aynı, kısaltıyorum */
        body {
            background-color: #000010;
            color: #00aaff;
            font-family: "Courier New", monospace;
            padding: 40px;
        }

        h1 {
            text-align: center;
            font-size: 2.5em;
            margin-bottom: 30px;
            text-shadow: 0 0 10px #00aaff;
        }

        form {
            max-width: 700px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        label {
            font-weight: bold;
            font-size: 1.2em;
        }

        textarea {
            width: 100%;
            height: 140px;
            background: #001022;
            border: 1px solid #00aaff;
            color: #00aaff;
            padding: 15px;
            border-radius: 6px;
            resize: vertical;
            font-family: monospace;
            font-size: 1em;
        }

        button {
            background: #00aaff;
            border: none;
            color: #000010;
            padding: 14px 25px;
            font-size: 1.2em;
            font-weight: bold;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color .3s;
            width: 150px;
            align-self: center;
        }

            button:hover {
                background: #0088cc;
            }

        .result {
            max-width: 700px;
            margin: 30px auto 0;
            background: #001022;
            border: 1px solid #00aaff;
            padding: 15px;
            border-radius: 8px;
            font-family: monospace;
            font-size: 1.1em;
            white-space: pre-wrap;
            word-break: break-word;
        }

        .error {
            max-width: 700px;
            margin: 10px auto;
            color: #ff5555;
            font-weight: bold;
            text-align: center;
        }

        .back-btn {
            display: block;
            margin: 30px auto 0;
            background: #004466;
            color: #00aaff;
            border: 2px solid #00aaff;
            font-weight: bold;
            font-size: 1.1em;
            padding: 10px 30px;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color .3s,color .3s;
            width: 160px;
            text-align: center;
            text-decoration: none;
        }

            .back-btn:hover {
                background: #006699;
                color: #fff;
                border-color: #0088cc;
            }
    </style>
</head>
<body>
    <h1>RSA Şifrele</h1>

    <form asp-action="Index" method="post">
        <label for="publicKeyBase64">Public Key (Base64):</label>
        <textarea id="publicKeyBase64" name="publicKeyBase64" placeholder="Public key'i buraya yapıştırın...">@ViewBag.PublicKey</textarea>

        <label for="plainText">Şifrelenecek Metin:</label>
        <textarea id="plainText" name="plainText" placeholder="Şifrelenecek metni buraya yazın...">@ViewBag.PlainText</textarea>

        <button type="submit">Şifrele</button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    @if (ViewBag.EncryptedText != null)
    {
        <div class="result">
            <strong>Şifrelenmiş Metin (Base64):</strong><br />
            @ViewBag.EncryptedText
        </div>
    }

    <button class="back-btn" type="button" onclick="history.back()">Geri Dön</button>
</body>
</html>
